<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/find_all_art"
            style="@style/mainButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="findAllArt"
            android:text="@string/findAllArt"/>

        <TextView
            android:id="@+id/find_unknown_art"
            style="@style/mainButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="findUnknownArt"
            android:text="@string/findUnknownArt"/>
    </LinearLayout>

    <TextView
        android:id="@+id/num_downloaded"
        style="@style/infoMsg"
        android:gravity="center"
        tools:ignore="SelectableText" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/songList"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/empty_list"
            style="@style/infoMsg"
            android:visibility="gone"
            android:gravity="center"
            android:text="No Music Found"/>
    </RelativeLayout>
</LinearLayout>